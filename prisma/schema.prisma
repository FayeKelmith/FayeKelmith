
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
 
 model Essay{
  id String @id @default(uuid())
  title String @unique 
  content String
  author String
  createdAt DateTime @default(now())
 }

 model Message{
  id String @id @default(uuid())
  sender String
  content String
  contact String?  
  createdAt DateTime @default(now())
 }

 model User{
  id String @id @default(uuid())
  username String @unique
  password String
  email String @unique
  createdAt DateTime @default(now())
  role Role @default(GUEST)
 }

 enum Role{
  ADMIN
  GUEST
 }